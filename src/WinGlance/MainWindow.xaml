<Window x:Class="WinGlance.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:WinGlance.Views"
        mc:Ignorable="d"
        Title="WinGlance"
        WindowStyle="None"
        AllowsTransparency="True"
        Topmost="True"
        Background="Transparent"
        SizeToContent="WidthAndHeight"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <Style x:Key="TitleBarButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="46" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#FFCCCCCC" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#33FFFFFF" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#55FFFFFF" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource TitleBarButtonStyle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                CornerRadius="0,6,0,0"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#FFE81123" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#FFF1707A" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#E0202020"
            BorderBrush="#FF444444"
            BorderThickness="1"
            CornerRadius="6"
            MouseRightButtonUp="Border_MouseRightButtonUp">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Grid Grid.Row="0"
                  Background="#FF2D2D2D"
                  MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="WinGlance"
                           Foreground="#FFCCCCCC"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"
                           FontSize="13"
                           FontWeight="SemiBold" />

                <StackPanel Grid.Column="1"
                            Orientation="Horizontal">
                    <Button Content="&#x2014;"
                            Click="MinimizeButton_Click"
                            Style="{StaticResource TitleBarButtonStyle}" />
                    <Button Content="&#x2715;"
                            Click="CloseButton_Click"
                            Style="{StaticResource CloseButtonStyle}" />
                </StackPanel>
            </Grid>

            <!-- Content area: views switched by SelectedTabIndex -->
            <Grid Grid.Row="1" Margin="4">
                <!-- Preview (always present, index 0) -->
                <views:PreviewTab x:Name="PreviewView"
                                  DataContext="{Binding PreviewViewModel}" />

                <!-- Applications overlay (index 1) -->
                <views:ApplicationsTab x:Name="ApplicationsView"
                                       DataContext="{Binding ApplicationsViewModel}"
                                       Visibility="Collapsed" />

                <!-- Settings overlay (index 2) -->
                <views:SettingsTab x:Name="SettingsView"
                                   DataContext="{Binding SettingsViewModel}"
                                   Visibility="Collapsed" />

                <!-- Prompt Editor overlay (index 3) -->
                <views:PromptEditorTab x:Name="PromptEditorView"
                                       DataContext="{Binding PromptEditorViewModel}"
                                       Visibility="Collapsed" />
            </Grid>
        </Grid>
    </Border>


</Window>
