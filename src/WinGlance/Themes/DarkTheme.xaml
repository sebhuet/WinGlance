<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Background colors -->
    <SolidColorBrush x:Key="WindowBackground" Color="#E0202020" />
    <SolidColorBrush x:Key="TitleBarBackground" Color="#FF2D2D2D" />
    <SolidColorBrush x:Key="PanelBackground" Color="#FF1A1A1A" />
    <SolidColorBrush x:Key="ItemBackground" Color="#33000000" />
    <SolidColorBrush x:Key="InputBackground" Color="#FF2A2A2A" />
    <SolidColorBrush x:Key="ButtonBackground" Color="#FF3A3A3A" />

    <!-- Text colors -->
    <SolidColorBrush x:Key="PrimaryText" Color="#FFCCCCCC" />
    <SolidColorBrush x:Key="SecondaryText" Color="#FFAAAAAA" />
    <SolidColorBrush x:Key="DimText" Color="#FF888888" />
    <SolidColorBrush x:Key="PlaceholderText" Color="#FF999999" />

    <!-- Border colors -->
    <SolidColorBrush x:Key="WindowBorder" Color="#FF444444" />
    <SolidColorBrush x:Key="InputBorder" Color="#FF555555" />
    <SolidColorBrush x:Key="ActiveBorder" Color="#FF0078D7" />
    <SolidColorBrush x:Key="InactiveBorder" Color="#FF444444" />

    <!-- Accent -->
    <SolidColorBrush x:Key="AccentBrush" Color="#FF0078D7" />
    <SolidColorBrush x:Key="HoverOverlay" Color="#33FFFFFF" />
    <SolidColorBrush x:Key="PressedOverlay" Color="#55FFFFFF" />

    <!-- Attention colors -->
    <SolidColorBrush x:Key="FlashingBorder" Color="#FFFF8C00" />
    <SolidColorBrush x:Key="HungOverlay" Color="#88FF0000" />
    <SolidColorBrush x:Key="ModalBorder" Color="#FFFFCC00" />

</ResourceDictionary>
