<UserControl x:Class="WinGlance.Views.ApplicationsTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="400">

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="Currently running applications:"
                       Foreground="#FFCCCCCC"
                       FontSize="13"
                       VerticalAlignment="Center" />
            <Button Content="Refresh"
                    Command="{Binding RefreshCommand}"
                    Margin="12,0,0,0"
                    Padding="10,3"
                    FontSize="12"
                    Background="#FF3A3A3A"
                    Foreground="#FFCCCCCC"
                    BorderBrush="#FF555555"
                    BorderThickness="1"
                    Cursor="Hand" />
        </StackPanel>

        <!-- App list -->
        <ListView Grid.Row="1"
                  ItemsSource="{Binding Apps}"
                  Background="#FF1A1A1A"
                  Foreground="#FFCCCCCC"
                  BorderBrush="#FF444444"
                  BorderThickness="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="40">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsMonitored}"
                                          HorizontalAlignment="Center" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Display Name" Width="160"
                                    DisplayMemberBinding="{Binding DisplayName}" />
                    <GridViewColumn Header="Process" Width="130"
                                    DisplayMemberBinding="{Binding ProcessName}" />
                    <GridViewColumn Header="Windows" Width="60"
                                    DisplayMemberBinding="{Binding WindowCount}" />
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Footer -->
        <Button Grid.Row="2"
                Content="Save Configuration"
                Command="{Binding SaveCommand}"
                HorizontalAlignment="Right"
                Margin="0,8,0,0"
                Padding="14,5"
                FontSize="12"
                Background="#FF3A3A3A"
                Foreground="#FFCCCCCC"
                BorderBrush="#FF555555"
                BorderThickness="1"
                Cursor="Hand" />
    </Grid>
</UserControl>
