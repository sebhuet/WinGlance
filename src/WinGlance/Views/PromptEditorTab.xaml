<UserControl x:Class="WinGlance.Views.PromptEditorTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:WinGlance.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="500"
             MinWidth="400" MinHeight="350">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility" />

        <Style TargetType="TextBlock" x:Key="SectionHeader">
            <Setter Property="Foreground" Value="#FFDDDDDD" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,8,0,6" />
        </Style>
    </UserControl.Resources>

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" MinHeight="120" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" MinHeight="100" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- ── Prompt Header ──────────────────────────────── -->
        <TextBlock Grid.Row="0" Text="LLM System Prompt" Style="{StaticResource SectionHeader}" />

        <!-- ── Editable Prompt TextBox ────────────────────── -->
        <TextBox Grid.Row="1"
                 Text="{Binding PromptText, UpdateSourceTrigger=PropertyChanged}"
                 AcceptsReturn="True"
                 AcceptsTab="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 FontFamily="Consolas"
                 FontSize="12"
                 Background="#FF1E1E1E"
                 Foreground="#FFD4D4D4"
                 BorderBrush="#FF555555"
                 BorderThickness="1"
                 Padding="6"
                 Margin="0,0,0,4" />

        <!-- ── Buttons row ────────────────────────────────── -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,4,0,8">
            <Button Content="Save Prompt"
                    Command="{Binding SaveCommand}"
                    Padding="10,4"
                    Background="#FF3A3A3A" Foreground="#FFCCCCCC"
                    BorderBrush="#FF555555" BorderThickness="1"
                    Cursor="Hand" Margin="0,0,8,0" />
            <Button Content="Reset to Default"
                    Command="{Binding ResetToDefaultCommand}"
                    Padding="10,4"
                    Background="#FF3A3A3A" Foreground="#FF999999"
                    BorderBrush="#FF555555" BorderThickness="1"
                    Cursor="Hand" />
        </StackPanel>

        <!-- ── Debug Toggle + Run ────────────────────────────── -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,4">
            <CheckBox Content="Enable Debug Log"
                      IsChecked="{Binding IsDebugEnabled}"
                      Foreground="#FFCCCCCC"
                      VerticalContentAlignment="Center" />
            <Button Command="{Binding RunAnalysisCommand}"
                    Padding="10,2"
                    Margin="12,0,0,0"
                    Background="#FF2E5D3A" Foreground="#FFCCCCCC"
                    BorderBrush="#FF555555" BorderThickness="1"
                    FontSize="11" Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Content" Value="Run Analysis" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                <Setter Property="Content" Value="Running..." />
                                <Setter Property="IsEnabled" Value="False" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="Clear"
                    Command="{Binding ClearLogCommand}"
                    Padding="8,2"
                    Margin="8,0,0,0"
                    Background="#FF3A3A3A" Foreground="#FF999999"
                    BorderBrush="#FF555555" BorderThickness="1"
                    FontSize="11" Cursor="Hand"
                    Visibility="{Binding IsDebugEnabled, Converter={StaticResource BoolToVisibility}}" />
        </StackPanel>

        <!-- ── Debug Log Area ─────────────────────────────── -->
        <Border Grid.Row="4"
                Background="#FF0D0D0D"
                BorderBrush="#FF555555"
                BorderThickness="1"
                CornerRadius="3"
                Margin="0,0,0,4"
                Visibility="{Binding IsDebugEnabled, Converter={StaticResource BoolToVisibility}}">
            <ListBox ItemsSource="{Binding DebugLog}"
                     Background="Transparent"
                     BorderThickness="0"
                     Foreground="#FF88CC88"
                     FontFamily="Consolas"
                     FontSize="11"
                     ScrollViewer.HorizontalScrollBarVisibility="Auto"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     ScrollViewer.CanContentScroll="True">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Padding" Value="4,1" />
                        <Setter Property="IsHitTestVisible" Value="False" />
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </Border>

        <!-- ── Hint text when debug is off ────────────────── -->
        <TextBlock Grid.Row="4"
                   Text="Enable debug log to see LLM reasoning for each analyzed window."
                   Foreground="#FF666666"
                   FontSize="11"
                   FontStyle="Italic"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0,8">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsDebugEnabled}" Value="False">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
    </Grid>
</UserControl>
